<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="10.0dip" />

            <gradient
                android:angle="0.0"
                android:endColor="@color/gray_bg"
                android:startColor="@color/gray_bg" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="10.0dip" />

                <gradient
                    android:angle="0.0"
                    android:endColor="#ba0000"
                    android:startColor="#ba0000" />
            </shape>
        </clip>
    </item>

</layer-list>